{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/parking-server/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/parking-server/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/parking-server",
  "projects": {
    "parking-server": {
      "type": "application",
      "root": "apps/parking-server",
      "entryFile": "main",
      "sourceRoot": "apps/parking-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/parking-server/tsconfig.app.json"
      }
    },
    "user-management-service": {
      "type": "application",
      "root": "apps/user-management-service",
      "entryFile": "main",
      "sourceRoot": "apps/user-management-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-management-service/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}
